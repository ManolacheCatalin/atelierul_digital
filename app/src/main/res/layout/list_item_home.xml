<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:elevation="3dp"
    style="@style/CardView.Light"
    android:paddingLeft="5dp"
    android:paddingRight="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/layout1"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/avatar_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:padding="4dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            app:srcCompat="@drawable/ic_camera" />
        <TextView
            android:id="@+id/title_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="18sp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="16dp"
            android:text="Venice vacation on september"
            android:fontFamily="@font/work_sans_semibold"
            android:textColor="@color/title_text_card"
            app:layout_constraintTop_toTopOf="@+id/avatar_image"
            app:layout_constraintStart_toEndOf="@+id/avatar_image"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/subtitle_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="16dp"
            android:textSize="14sp"
            android:fontFamily="@font/work_sans_medium"
            android:layout_marginBottom="4dp"
            android:text="Venice"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/body_text_card"
            app:layout_constraintStart_toEndOf="@+id/avatar_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/avatar_image" />
        <ImageView
            android:id="@+id/media_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="12dp"
            android:scaleType="centerCrop"
            android:background="@drawable/venice_back"
            app:layout_constraintDimensionRatio="H,16:9"
            app:layout_constraintTop_toBottomOf="@+id/avatar_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        <View
            android:id="@+id/card_divider"
            android:layout_width="match_parent"
            android:paddingTop="1dp"
            app:layout_constraintBottom_toBottomOf="@+id/media_image"
            android:background="@color/color_divider"
            android:layout_height="5dp">
        </View>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_marginTop="305dp"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/favorite_media"
            android:layout_width="15dp"
            android:scaleType="centerCrop"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="@+id/media_image2"
            app:layout_constraintRight_toRightOf="@+id/title_text2"
            android:layout_height="15dp"/>

        <ImageView
            android:id="@+id/avatar_image2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="12dp"
            android:padding="4dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_camera"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />
        <TextView
            android:id="@+id/title_text2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="18sp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="16dp"
            android:text="Venice vacation on september"
            android:fontFamily="@font/work_sans_semibold"
            android:textColor="@color/title_text_card"
            app:layout_constraintTop_toTopOf="@+id/avatar_image2"
            app:layout_constraintStart_toEndOf="@+id/avatar_image2"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/subtitle_text2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="16dp"
            android:textSize="14sp"
            android:fontFamily="@font/work_sans_medium"
            android:layout_marginBottom="4dp"
            android:text="Venice"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/body_text_card"
            app:layout_constraintStart_toEndOf="@+id/avatar_image2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/avatar_image2" />
        <ImageView
            android:id="@+id/media_image2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="12dp"
            android:scaleType="centerCrop"
            android:background="@drawable/venice_back"
            app:layout_constraintDimensionRatio="H,16:9"
            app:layout_constraintTop_toBottomOf="@+id/avatar_image2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>